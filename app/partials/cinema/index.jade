include ../mixins/mixins

div.backdrop(ng-if='curQR.length > 0', ng-click='closePopup()')
  div.popup
    div.popup__inner(ng-bind-html='curQR', onclick='return false')
div.page.page__type_white
  div.page__inner.header__fix
    own-header
    div.page__content
      div.content-spin__layer(ng-if='dataLoading1 || dataLoading2')
        div.search-spin-layer_
          div.search-spin
      div.company__content
        div(ng-if='!dataLoading1 && !dataLoading2 && !movies.length')
          div.landing-title.page__company
            h3 Создайте новый фильм, чтобы добавить звуковые дорожки
          div.company__inner
            div.company__button
              a.button.button-large.theme-green(ng-href="{{'#!/cinemas/' + cinema.Id + '/create'}}") Создать
        div(ng-if='!dataLoading1 && !dataLoading2 && movies.length')
          h1.title Фильмы
          h2.subtitle(ng-cloak) Кинотеатр «{{cinema.Name}}»
          div.company__cinema-list
            a.company__cinema-item(ng-repeat='item in movies', ng-href="{{'#!/cinemas/' + cinema.Id + '/movies/' + item.Id}}", style='height: 100px;')
              div.cinema__name(ng-bind='item.Name')
              div.vertical-aligner
              div.cinema__qr-layer(onclick='return false', ng-click='selectQr(item.QR)')
                div.cinema__qr
                  div(style='transform: scale(2.1); width: 30px; height: 31px; background: #FFFFFF; padding: 32px; border: 1px solid;', ng-bind-html='item.QR')
            div.company__button(style='margin-top: 24px; padding: 38px 24px 15px; border-top: 1px solid #ccc;')
              a.button.button-large.theme-green(ng-href="{{'#!/cinemas/' + cinema.Id + '/movies/create'}}") Добавить